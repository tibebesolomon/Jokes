<RelativeLayout
android:background="@drawable/backgroun"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_app__info"
    tools:context="com.example.tibsolg.pray.App_Info"
    >

    <TextView
        android:textColor="#000000"
        android:id="@+id/app_title"
        android:text="የአፕልኬሽኑ ምስል："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_below="@id/app_title"
        android:id="@+id/i_logo"
        android:src="@drawable/ic1"
        android:layout_width="120dp"
        android:layout_height="120dp" />

    <TextView
        android:textColor="#000000"
        android:layout_marginBottom="2dp"
        android:id="@+id/app_name"
        android:layout_marginLeft="150dp"
        android:text="አፕልኬሽኑ ርዓስ:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="#000000"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="150dp"
        android:layout_below="@+id/app_name"
        android:text="ፈታ በዘመናዊኛ-relax with jokes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3" />

<ScrollView
    android:paddingTop="130dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView">
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/i_logo"
        android:id="@+id/relativeLayout">
        <!--<View android:layout_height="1dp"-->
            <!--android:layout_width="match_parent"-->
            <!--android:background="#ffffff"/>-->

        <LinearLayout
            android:id="@+id/button_group1"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:padding="7dp">

            <TextView
                android:textColor="#000000"
                android:id="@+id/app_info"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="የአፕልኬሽኑ የስሪት ቁጥር:"
                android:layout_weight="1.0"
                android:layout_marginRight="3dp"
                />


            <TextView
                android:textColor="#000000"
                android:layout_width="0.0dp"
                android:layout_height="fill_parent"
                android:text="1.0"
                android:layout_weight="1.0"
                android:layout_marginLeft="3dp"
                />

        </LinearLayout>



        <LinearLayout
            android:id="@+id/button_group2"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_group1"
            android:layout_marginBottom="10dp"
            android:padding="7dp">
            <TextView
                android:textColor="#000000"
                android:layout_width="0.0dp"
                android:layout_height="fill_parent"
                android:text="አፕልኬሽኑን የሰራው："
                android:layout_weight="1.0"
                android:layout_marginRight="3dp"
                />
            <TextView
                android:textColor="#000000"
                android:id="@+id/btnSendFeedback"
                android:layout_width="0.0dp"
                android:layout_height="fill_parent"
                android:text="TS Software and web development PLC \n ቲዔስ ሶፍትዌር እና ዌብሳይት ሰሪ ድርጅት"
                android:layout_weight="1.0"
                android:layout_marginLeft="3dp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/button_group3"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_group2"
            android:padding="7dp"
            >
            <TextView
                android:textColor="#000000"
                android:layout_width="0.0dp"
                android:layout_height="fill_parent"
                android:text="ስለ አፕልኬሽኑ ማብራሪያ："
                android:layout_weight="1.0"
                android:layout_marginRight="3dp"
                />
            <TextView
                android:id="@+id/la1"
                android:textColor="#000000"
                android:layout_width="0.0dp"
                android:layout_height="fill_parent"
                android:text="@string/description_about"
                android:layout_weight="1.0"
                android:layout_marginLeft="3dp"
                />


        </LinearLayout>
    </RelativeLayout>
</ScrollView>

    <TextView
        android:textColor="#000000"
        android:text="2017 TS PLC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginTop="41dp" />



