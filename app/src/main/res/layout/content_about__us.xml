 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    tools:context=".About_Us"
    android:orientation="vertical"
    android:layout_centerHorizontal="true"
    android:background="@drawable/backgroun">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:padding="5dp"
        android:layout_marginTop="60dp">


        <ImageView
            android:src="@drawable/logo1"
            android:layout_width="170dp"
            android:layout_height="180dp"
            android:id="@+id/about_usImage"
           />

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/AoutUSText1"
                android:text="የአፕልኬሽኑ ስም:\n *ፈታ በ ዘመናዊኛ-Relax with modernize"
                />


            <TextView
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/AoutUSText"
                android:text="Version:\n *1.0"
                />



            <TextView
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/AoutUSText4"
                android:text="የኢሜል አድራሻችን:"
                />
            <TextView
                android:textColor="#000000"
                android:id="@+id/contact_us"
                android:text="itsc.tibebe.solomon@gmail.com"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/AoutUSText5"
                android:text="ስልክ ቁጥር:"
                />
            <TextView
                android:textColor="#000000"
                android:id="@+id/contact_call"
                android:text="+251929140168"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent" />


        </LinearLayout>
</ScrollView>
    </LinearLayout>
    <!--<View android:layout_height="0.5dp"-->
        <!--android:layout_width="match_parent"-->
